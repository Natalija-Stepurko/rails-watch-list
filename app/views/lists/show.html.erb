<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( <%= @list.image_url %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <button type="button" class="btn btn-warning"><%= @list.bookmarks.count %> movies</button>
  </div>
</div>

<div class="container" style="padding-top: 50px">
  <div class="row row-cols-1 row-cols-md-2">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col mb-4">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="Card image cap">
          <div class="card-body">
            <h2 class="card-title"><%= bookmark.movie.title %></h2>
            <p class="card-text"><%= bookmark.comment  %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="conatiner" style="padding: 50px">
  <button type="button" class="btn btn-success"><%= link_to 'Add movie', new_list_bookmark_path(@list) %></button>
  <button type="button" class="btn btn-info"><%= link_to 'Back to lists', lists_path %></button>
</div>
